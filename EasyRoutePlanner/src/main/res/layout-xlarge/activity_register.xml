<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fitnesstracker"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.msc.EasyRoutePlanner.Register">

    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68dp"
        android:hint="User Name"
        android:textSize="@dimen/abc_action_bar_progress_bar_size" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextUserName"
        android:hint="Email Address"
        android:textSize="@dimen/abc_action_bar_progress_bar_size" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextEmail"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextEmail"
        android:hint="Password"
        android:maxLength="21"
        android:textSize="@dimen/abc_action_bar_progress_bar_size" />

    <EditText
        android:id="@+id/editTextRetypePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextPassword"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextPassword"
        android:hint="Re-type Password"
        android:maxLength="21"
        android:textSize="@dimen/abc_action_bar_progress_bar_size" />

    <Button
        android:id="@+id/buttonRegister"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="375dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/editTextRetypePassword"
        android:layout_marginTop="104dp"
        android:background="@drawable/card_action_bg_custom"
        android:hint="Register"
        android:textSize="@dimen/abc_action_bar_progress_bar_size" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Easy Route Planner"
        android:textSize="@dimen/abc_action_bar_stacked_max_height"
        android:textStyle="bold" />
</RelativeLayout>
